        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.ErrorButton</item>
    </style>

    <style name="Widget.App.ErrorButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorError</item>
    </style>
    <style name="MaterialAlertDialog.App.Title.TextError" parent="MaterialAlertDialog.Material3.Title.Text.CenterStacked">
        <item name="android:textColor">?attr/colorError</item>
    </style>
</resources>
