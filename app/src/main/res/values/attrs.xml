<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!--Additional Theme attributes-->
    <attr name="colorSuccess" format="color" />
    <attr name="colorOnSuccess" format="color" />
    <attr name="colorSuccessContainer" format="color" />
    <attr name="colorOnSuccessContainer" format="color" />
    <attr name="harmonizeSuccess" format="boolean" />

    <attr name="attendanceCalendarStyle" format="reference"/>

    <!--Attendance Calendar view attributes-->
    <declare-styleable name="AttendanceCalendarView">
        <attr name="acv_monthYearHeaderTextAppearance" format="reference"/>

        <attr name="acv_weekDayLabels" format="reference"/>
        <attr name="acv_monthLabels" format="reference"/>

        <!--Styles for day of months in different conditions; values are dayOfMonthAppearance-->
        <attr name="acv_dayStyle" format="reference"/>
        <attr name="acv_dayTodayStyle" format="reference"/>

        <attr name="acv_dayPresentAttendanceStyle" format="reference"/>
        <attr name="acv_dayAbsentAttendanceStyle" format="reference"/>
        <attr name="acv_dayCancelledAttendanceStyle" format="reference"/>
        <attr name="acv_dayUnsetAttendanceStyle" format="reference"/>

        <attr name="acv_dayPresentAttendanceExtraStyle" format="reference"/>
        <attr name="acv_dayAbsentAttendanceExtraStyle" format="reference"/>
        <attr name="acv_dayCancelledAttendanceExtraStyle" format="reference"/>
        <attr name="acv_dayUnsetAttendanceExtraStyle" format="reference"/>

    </declare-styleable>
    
    <declare-styleable name="dayOfMonthAppearance">
        <attr name="itemFillColor" format="color" />
        <attr name="itemTextColor" />
        <attr name="itemStrokeColor" format="color" />
        <attr name="itemStrokeWidth" format="dimension" />
        <attr name="itemShapeAppearance" />
        <attr name="itemShapeAppearanceOverlay" />
    </declare-styleable>
</resources>
